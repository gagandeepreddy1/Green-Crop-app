<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Market List"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_margin="30dp"
        android:fontFamily="cursive"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="30dp"
        >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            android:layout_margin="10dp"
            >

            <Button
                android:id="@+id/btnDelhi"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:backgroundTint="#00BCD4"
                android:text="Delhi" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            android:layout_margin="10dp"
            >
            <Button
                android:id="@+id/btnMumbai"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textStyle="bold"
                android:text="Mumbai"
                android:textSize="20dp"
                android:textAllCaps="false"        android:backgroundTint="#FF5722"
                android:layout_gravity="center"
                />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:strokeColor="@color/purple_200"
            app:strokeWidth="2dp"
            android:layout_margin="10dp"
            >
            <Button
                android:id="@+id/btnChennai"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Chennai"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textAllCaps="false"   android:backgroundTint="#009688"
                android:layout_gravity="center"
                />
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            android:layout_margin="10dp"
            >
            <Button
                android:id="@+id/btnHydrabad"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Hydrabad"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textAllCaps="false"  android:layout_gravity="center"
                android:backgroundTint="#FFC107"
                android:textColor="@color/black"
                />
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            android:layout_margin="10dp"
            >
            <Button
                android:id="@+id/btnVijayvada"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Vijaywada"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:backgroundTint="#FCFCFC"
                android:textColor="@color/black"
                />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>